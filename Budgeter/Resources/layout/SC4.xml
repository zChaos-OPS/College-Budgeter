<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SC4"
    android:background="#ff05c9fb"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtvSec1ShpDr"
        android:textAlignment="center"
        android:textColor="#ff0002e0"
        android:textStyle="italic|bold"
        android:typeface="serif"
        android:paddingBottom="10dp"
        android:textSize="25dp"
        android:text="Section 1: Shopping (Dresses)"
        android:maxLines="3" />
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ScrollBarSC4" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1"
            android:id="@+id/TableLaySC4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec1Note"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                android:textColor="#ff1a237e"
                android:text="Note: Choose the answer that applies to you the most."
                android:maxLines="5"
                android:paddingBottom="10dp" />
            <TextView
                android:text="1. How many times do you go for shopping dresses every month?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvSec1Qs1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffffff00"
                android:maxLines="5"
                android:paddingBottom="5dp" />
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdgrpSec1Qs1Ans">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="1"
                    android:id="@+id/rdSec1Ans1Opt1"
                    android:buttonTint="#ffd50000"
                    android:textColor="#ffd50000"
                    android:textSize="18dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/rdSec1Ans1Opt2"
                    android:buttonTint="#ffd50000"
                    android:textColor="#ffd50000"
                    android:textSize="18dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="18dp"
                    android:id="@+id/rdSec1Ans1Opt3"
                    android:buttonTint="#ffd50000"
                    android:textColor="#ffd50000" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 or more"
                    android:textSize="18dp"
                    android:id="@+id/rdSec1Ans1Opt4"
                    android:buttonTint="#ffd50000"
                    android:textColor="#ffd50000"/>
                </RadioGroup>
            <TextView
                android:text="2. You typically shop:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Sec1Qs2"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:textStyle="bold"
                android:maxLines="2"
                android:paddingBottom="5dp"
                android:paddingTop="10dp" />
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdgrpSec1Qs2Ans">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Expensive"
                    android:textSize="18dp"
                    android:id="@+id/rdSec1Ans2Opt1"
                    android:buttonTint="#ffd50000"
                    android:textColor="#ffd50000"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mid"
                    android:id="@+id/rdSec1Ans2Opt2"
                    android:buttonTint="#ffd50000"
                    android:textColor="#ffd50000"
                    android:textSize="18dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cheap"
                    android:textSize="18dp"
                    android:id="@+id/rdbtnSec1Ans2Opt3"
                    android:buttonTint="#ffd50000"
                    android:textColor="#ffd50000"/>
            </RadioGroup>
            <TextView
                android:text="3. What is the average number of clothes you buy per month?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Sec1Qs3"
                android:textColor="#ffffff00"
                android:textSize="20dp"
                android:textStyle="bold"
                android:maxLines="5"
                android:paddingBottom="5dp"
                android:paddingTop="10dp" />
            <EditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSec1Qs3Ans"
                android:layout_marginRight="275dp"
                android:maxLines="1"
                android:hint="$" />
            <TextView
                android:text="Click on the 'Proceed' button below to move on to Section 2:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ConclusiveInfoSC4"
                android:textColor="#ff1a237e"
                android:textStyle="bold|italic"
                android:textSize="19dp"
                android:textAlignment="center"
                android:maxLines="5"
                android:paddingTop="10dp" />
            <Button
                android:text="Proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnProceedSC4"
                android:backgroundTint="#ff00e5ff"
                android:textStyle="bold"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff000000" />
        </TableLayout>

    </ScrollView>

</LinearLayout>