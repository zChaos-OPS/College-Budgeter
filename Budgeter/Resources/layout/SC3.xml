<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SC3"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#ff05c9fb">
    <TextView
        android:text="The following are the categories and maybe some additional ones that this app will ask you questions on:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCategoryInfoSC3"
        android:textColor="#ff0002e0"
        android:textStyle="bold|italic"
        android:textSize="23dp"
        android:textAlignment="center"
        android:typeface="serif"
        android:paddingBottom="18dp" />
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ScrollBarSC3">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1"
            android:id="@+id/TableLaySC3">
            <TextView
                android:text="1. Shopping (Dresses)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtvCat1"
                android:textColor="#ffffff00"
                android:textStyle="normal"
                android:textSize="21dp"
                android:paddingBottom="20dp"/>
            <TextView
                android:text="2. Transportation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvCat2"
                android:textColor="#ffffff00"
                android:textStyle="normal"
                android:paddingBottom="20dp"
                android:textSize="21dp"/>
            <TextView
                android:text="3. House"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvCat3"
                android:textColor="#ffffff00"
                android:textStyle="normal"
                android:paddingBottom="20dp"
                android:textSize="21dp" />
            <TextView
                android:text="4. Utilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvCat4"
                android:textColor="#ffffff00"
                android:textStyle="normal"
                android:paddingBottom="20dp"
                android:textSize="21dp" />
            <TextView
                android:text="5. Bills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvCat5"
                android:textColor="#ffffff00"
                android:textStyle="normal"
                android:paddingBottom="20dp"
                android:textSize="21dp" />
            <TextView
                android:text="6. Insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvCat6"
                android:textColor="#ffffff00"
                android:textSize="21dp"
                android:paddingBottom="20dp"
                android:textStyle="normal" />
            <TextView
                android:text="7. Eating Habits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvCat7"
                android:textColor="#ffffff00"
                android:textStyle="normal"
                android:paddingBottom="20dp"
                android:textSize="21dp" />
            <TextView
                android:text="8. Home Maintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvCat8"
                android:textColor="#ffffff00"
                android:textStyle="normal"
                android:paddingBottom="20dp"
                android:textSize="21dp" />
            <TextView
                android:text="9. Online Services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtvCat9"
                android:textColor="#ffffff00"
                android:textStyle="normal"
                android:paddingBottom="20dp"
                android:textSize="21dp" />
            <TextView
                android:text="Click on the 'Proceed' button below to start:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ConclusiveInfoSC3"
                android:textColor="#ff1a237e"
                android:textStyle="bold|italic"
                android:textSize="19dp"
                android:textAlignment="center" />
            <Button
                android:text="Proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnProceedSC3"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="20dp"
                android:background="#ff00e5ff"
                android:textStyle="bold" />
        </TableLayout>

    </ScrollView>



</LinearLayout>
